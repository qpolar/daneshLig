    <script>
const elementsWithBookInfoClass = document.querySelectorAll('.book-item');

elementsWithBookInfoClass.forEach(element => {

    element.addEventListener('click', (e) => {
        
        const clickedElement = e.currentTarget;
        console.log('ID:', clickedElement.id);
        
        if (clickedElement.id) {
            sendIdToBackend(clickedElement.id);
        } else {
            console.error('Element has no ID:', clickedElement);
        }
    });
});

 function sendIdToBackend(txt) {
    fetch('/sendid', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ bookname: txt })
    })
    .then(response => response.json())
    .then(data => {
        if (data.redirectUrl) {
            // هدایت کاربر به صفحه درس
            window.location.href = data.redirectUrl;
        } else {
            console.error('خطا: آدرس ریدایرکت وجود ندارد!');
        }
    })
    .catch(error => console.error('خطا در ارسال ID:', error));

}


