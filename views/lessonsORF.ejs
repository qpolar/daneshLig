        </div>

        <!-- فصل 5 -->
        <div class="chapter-card">
            <div class="chapter-image" style="background-image: url('https://source.unsplash.com/random/600x400/?prime,numbers');">
                <span class="chapter-number">۵</span>
            </div>
            <div class="chapter-content">
                <h2>فصل پنجم: شمارنده‌ها و اعداد اول</h2>
                <p>شمارنده‌ها، اعداد اول و تجزیه اعداد به عوامل اول</p>
                <button onclick="startChapterQuiz(5)" class="quiz-btn">شروع کوییز فصل</button>
            </div>
        </div>

        <!-- فصل 6 -->
        <div class="chapter-card">
            <div class="chapter-image" style="background-image: url('https://source.unsplash.com/random/600x400/?volume,area');">
                <span class="chapter-number">۶</span>
            </div>
            <div class="chapter-content">
                <h2>فصل ششم: سطح و حجم</h2>
                <p>محاسبه سطح و حجم شکل‌های هندسی مختلف</p>
                <button onclick="startChapterQuiz(6)" class="quiz-btn">شروع کوییز فصل</button>
            </div>
        </div>

        <!-- فصل 7 -->
        <div class="chapter-card">
            <div class="chapter-image" style="background-image: url('https://source.unsplash.com/random/600x400/?power,root');">
                <span class="chapter-number">۷</span>
            </div>
            <div class="chapter-content">
                <h2>فصل هفتم: توان و جذر</h2>
                <p>مفهوم توان و جذر و محاسبه آنها</p>
                <button onclick="startChapterQuiz(7)" class="quiz-btn">شروع کوییز فصل</button>
            </div>
        </div>

        <!-- فصل 8 -->
        <div class="chapter-card">
            <div class="chapter-image" style="background-image: url('https://source.unsplash.com/random/600x400/?vector,coordinates');">
                <span class="chapter-number">۸</span>
            </div>
            <div class="chapter-content">
                <h2>فصل هشتم: بردار و مختصات</h2>
                <p>مفاهیم بردار و سیستم مختصات</p>
                <button onclick="startChapterQuiz(8)" class="quiz-btn">شروع کوییز فصل</button>
            </div>
        </div>
    </div>

    <div class="footer">
         <p>ساخته شده با ❤️ برای آینده‌سازان ایران</p>
    </div>

    <script>
        // تابع کلی برای شروع کوییز هر فصل
        function startChapterQuiz(chapterNumber) {
            localStorage.setItem('current-chapter', chapterNumber);
            localStorage.setItem('current-quiz-title', `ریاضی هفتم - فصل ${chapterNumber}`);
            window.location.href = 'quiz.html';
        }

        // سوالات فصل اول (راهبردهای حل مسئله)
        const chapter1Questions = [
            {
                question: "کدام یک از راهبردهای زیر برای حل مسئله 'پیدا کردن الگو' مناسب است؟",
                answers: [
                    {text: 'رسم شکل', correct: false},
                    {text: 'حل مسئله ساده‌تر', correct: false},
                    {text: 'جستجوی الگو در اعداد', correct: true},
                    {text: 'تخمین و حدس', correct: false}
                ]
            },
            {
                question: "برای حل مسئله‌ای که می‌خواهیم تعداد راه‌های چیدن 3 کتاب در قفسه را پیدا کنیم، کدام راهبرد مناسب است؟",
                answers: [
                    {text: 'الگوسازی', correct: true},
                    {text: 'حل معادله', correct: false},
                    {text: 'تخمین زدن', correct: false},
                    {text: 'شمارش مستقیم', correct: true}
                ]
            }
        ];

        // ذخیره سوالات نمونه برای فصل اول
        localStorage.setItem('math7-chapter1-questions', JSON.stringify(chapter1Questions));
    </script>
